<%- include("header",{user:users.username})%>
<div class="container">
    <div class="container-fluid">
        <div class="card mb-3">
            <img src="<%= contents.thumbnail%>" class="card-img-top" alt="..." width="60%" height="350px" style="object-fit: cover;">
            <div class="card-body">
              <h5 class="card-title"><%= contents.title %></h5>
              <p class="card-text"><%= contents.content.substring(0,180)%></p>
              <p class="card-text"><small class="text-muted"><%= contents.username%></small></p>
            </div>
          </div>
</div>
<%- include("footer") -%>